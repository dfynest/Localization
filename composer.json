{
    "name": "dfynest/localization",
    "description": "Localization Package for Laravel",
    "keywords": [
        "laravel",
        "localization",
        "localisation",
        "i18n"
    ],
    "homepage": "https://github.com/dfynest/Localization",
    "authors": [
        {
            "name": "dfynest",
            "email": "imdfynest@gmail.com",
            "homepage": "https://github.com/dfynest",
            "role": "Developer"
        }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "ext-intl": "*",
        "laravel/framework": "^9.0",
        "mockery/mockery": "^1.4.4",
        "orchestra/testbench-core": "^7.0",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "dfynest\\Localization\\": "src/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "dfynest\\Localization\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:dox": "phpunit --testdox --colors=always",
        "test:cov": "phpunit --coverage-html coverage"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "9.x-dev"
        },
        "laravel": {
            "providers": [
                "dfynest\\Localization\\LocalizationServiceProvider",
                "dfynest\\Localization\\Providers\\DeferredServicesProvider"
            ]
        }
    },
    "suggest": {
        "ext-intl": "Use Intl extension for 'Locale' class (an identifier used to get language)."
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
